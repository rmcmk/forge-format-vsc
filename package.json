{
  "name": "forge-format-vsc",
  "displayName": "Forge (Foundry) Format",
  "publisher": "rmcmk",
  "description": "Formats Solidity (*.sol) using `forge fmt` from Foundry",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rmcmk/forge-format-vsc"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:solidity"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Forge Format VSC",
      "properties": {
        "rmcmk.forge-format-vsc.includePaths": {
          "type": "array",
          "default": [],
          "description": "An array of globs that should be included when formatting."
        },
        "rmcmk.forge-format-vsc.excludePaths": {
          "type": "array",
          "default": [],
          "description": "An array of globs that should be excluded when formatting."
        },
        "rmcmk.forge-format-vsc.workspace": {
          "type": "object",
          "default": {
            "automatic": true,
            "overrideRoot": null
          },
          "properties": {
            "rmcmk.forge-format-vsc.workspace.automatic": {
              "type": "boolean",
              "default": true,
              "description": "Whether or not to detect the workspace root."
            },
            "rmcmk.forge-format-vsc.workspace.overrideRoot": {
              "type": [
                "string",
                "null"
              ],
              "default": null,
              "description": "The workspace root to use if `automatic` is `false`."
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "type-fest": "^4.8.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
